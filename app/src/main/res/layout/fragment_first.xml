<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutHeader"
                android:layout_width="410dp"
                android:layout_height="476dp"
                android:background="@drawable/backlog"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">


                <TextView
                    android:id="@+id/hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Hi ,"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/userNameFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="15dp"
                    android:text="User"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/hello"
                    app:layout_constraintTop_toTopOf="parent" />


                <Button
                    android:id="@+id/notificationBell"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintRight_toRightOf="@id/layoutHeader"
                    android:layout_marginRight="50dp"
                    android:clickable="true"
                    android:background="@drawable/ic_notifications_active_white_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/hello"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/hello" />


            </androidx.constraintlayout.widget.ConstraintLayout>




            <RelativeLayout
                android:id="@+id/typeTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/white_rectangle_backgrounf"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/tp"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/temp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tp"
                    android:gravity="center"
                    android:text="Recent Temperature (C)"

                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tempOriginal"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="000"
                    android:textSize="30sp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/white_rectangle_backgrounf"
                android:clickable="true"
                android:gravity="center"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/typeTemp">

                <ImageView
                    android:id="@+id/adr"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/posblue" />


                <TextView
                    android:id="@+id/addressHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adr"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Current Location:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/originalAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressHead"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="8dp"
                    android:text="N/A"
                    android:textSize="20sp" />


            </RelativeLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/latest_update"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="@id/layoutAddress"
                app:layout_constraintStart_toStartOf="@id/layoutAddress"
                app:layout_constraintTop_toBottomOf="@id/layoutAddress">


                <TextView
                    android:id="@+id/latestUpd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gg"
                    android:clickable="true"
                    android:padding="2dp"
                    android:text="Latest Update"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_info_black_24dp"
                    android:tint="#ffffff"
                    app:layout_constraintBottom_toBottomOf="@id/latestUpd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/latestUpd" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:text="For any updates from Govt. of India regarding COVID-19
,click on latest updates provided above."
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/latestUpd" />


            </androidx.constraintlayout.widget.ConstraintLayout>






        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
















</FrameLayout>