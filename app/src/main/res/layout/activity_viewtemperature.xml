<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="NOT CONNECTED"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/receiveDataHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Receiving Data:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiveDataHead"
            android:layout_centerHorizontal="true"
            android:text="000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tempHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Temperature:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tempCelsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tempHead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="0"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tempFahrenheit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tempCelsius"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="0"
            android:textSize="17sp" />


    </RelativeLayout>


    <Button

        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/latest_update"
        android:text="@string/action_connect"
        android:textColor="#fff" />
</RelativeLayout>