<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginBottom="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relMAp"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/geofence"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="-7dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/geofence"/>

            <ImageView
                android:id="@+id/openMAp1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:src="@drawable/mapt" />
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/openMAp"
                android:layout_below="@+id/openMAp1"
                android:text="@string/open_geofence"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-25dp"
                android:background="@drawable/dat" />




        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/white_rectangle_backgrounf"
            android:gravity="center"
            android:padding="15dp"
           android:layout_below="@+id/relMAp"
            >








            <TextView
                android:id="@+id/addressHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/adr"
                android:text="@string/current_location"
                android:layout_marginTop="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/originalAddressFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressHead"
                android:layout_toRightOf="@+id/adr"
                android:text="N/A"
                android:layout_marginTop="5dp"
                android:textSize="20sp" />




<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/originalAddressFrag"
    android:text="@string/location_updates"
    android:layout_centerHorizontal="true"
    android:background="@drawable/dat"
    android:padding="8dp"
    android:id="@+id/locUp"/>

        </RelativeLayout>




    </RelativeLayout>

        </ScrollView>


</FrameLayout>