<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".LogIn">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backlog">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:src="@drawable/logo" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/white_rectangle_backgrounf"
            android:padding="8dp">


            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RelativeLayout
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/welcome"
                            android:textColor="#B0302F2F"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/nameL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/dat"
                            android:hint="@string/name"
                            android:inputType="text"
                            android:padding="6dp"
                            android:singleLine="true"
                            android:textColor="#B0302F2F"
                            android:textColorHint="#B0302F2F"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ageL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/dat"
                            android:hint="@string/age"
                            android:inputType="number"
                            android:padding="6dp"
                            android:singleLine="true"
                            android:textColor="#B0302F2F"
                            android:textColorHint="#B0302F2F"
                            android:textSize="18sp" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.8"
                        android:padding="1dp"
                        android:text="@string/quarantine_type"
                        android:textColor="#84000000"
                        android:textSize="18sp" />


                    <LinearLayout
                        android:id="@+id/hq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/home_quar"
                            android:textColor="#B0302F2F"
                            android:textSize="15sp" />


                        <RadioButton
                            android:id="@+id/hq_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="28dp"
                            android:buttonTint="#B0302F2F"
                            android:textColor="@color/md_grey_700" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/isolation_quar"
                            android:textColor="#B0302F2F"
                            android:textSize="15sp" />


                        <RadioButton
                            android:id="@+id/ic_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:buttonTint="#B0302F2F"
                            android:textColor="@color/md_grey_700" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/addressL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/dat"
                            android:ellipsize="start"
                            android:hint="@string/address"
                            android:inputType="text"
                            android:maxLines="10"
                            android:padding="6dp"
                            android:textColor="#B0302F2F"
                            android:textColorHint="#B0302F2F"
                            android:textSize="18sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/bluetoothId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/dat"
                            android:hint="@string/bluetooth_id"
                            android:inputType="number"
                            android:padding="6dp"
                            android:textColor="#B0302F2F"
                            android:textColorHint="#B0302F2F"
                            android:textSize="18sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/timeRL"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/startTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/dat"
                            android:hint="Estimated Time to reach home(in Hrs)"
                            android:inputType="numberSigned"
                            android:padding="6dp"
                            android:textColor="#B0302F2F"
                            android:textColorHint="#B0302F2F"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/mobileL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/dat"
                            android:inputType="number"
                            android:padding="6dp"
                            android:textColor="#B0302F2F"
                            android:textColorHint="#B0302F2F"
                            android:textSize="18sp" />
                    </RelativeLayout>


                    <Button
                        android:id="@+id/submit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/buttob"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="@string/submit"
                        android:textColor="#fff" />

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/profile_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:elevation="2dp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>